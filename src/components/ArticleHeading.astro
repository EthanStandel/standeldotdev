---
import CategoryChips from './CategoryChips.astro';
import Divider from './Divider.astro';

export interface Props {
  title: string;
  date: string;
  updated?: string;
  readingTime: string;
  categories: Array<string>;
}

const { title, date, readingTime, categories, updated } = Astro.props;
---
<h1>{title}</h1>
<h5>
  <span>
    <img src="/headshot.jpeg" />
    Ethan Standel
  </span>
  <span>
    {readingTime}
  </span>
</h5>
<h5>
  Published {date} {updated && ` // Updated ${updated}`}
</h5>
<CategoryChips categories={categories} />
<Divider />
<style lang="scss">
  * {
    color: var(--palette-txtDim);
  }
  h5 {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-block-start: 0;
    margin-block-end: 0;
    margin-top: 1em;
    margin-bottom: 1em;

    > span {
      display: flex;
      align-items: center;
    }
  }
  details {
    margin-top: .5em;
    margin-bottom: .5em;
    margin-left: 3rem;
    > * {
      display: inline-block;
    }
    > summary {
      margin-right: 1em;
      text-decoration: underline;
    }
  }
  img {
    height: 2rem;
    width: 2rem;
    margin-right: 1rem;
    display: inline-block;
    border-radius: 1rem;
    object-fit: cover;
  }
</style>